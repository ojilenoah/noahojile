{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist/public",
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server/index.ts"
    },
    {
      "src": "/manifest\\.json",
      "dest": "/manifest.json"
    },
    {
      "src": "/sw\\.js",
      "dest": "/sw.js"
    },
    {
      "src": "/(.*\\.(js|css|ico|png|jpg|jpeg|svg|gif|woff2?|ttf|eot|webp|mp4|mp3|wav|ogg))$",
      "dest": "/$1"
    },
    {
      "src": "/(.*\\.pdf)$",
      "dest": "/$1",
      "headers": {
        "Content-Type": "application/pdf"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
